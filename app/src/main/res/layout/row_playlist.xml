<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/playlist_detail_song_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/background_spotify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/playlist_detail_song_info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.2"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/playlist_detail_song_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/playlist_detail_song_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:id="@+id/playlist_detail_song_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:padding="5dp" />

        <TextView
            android:id="@+id/playlist_detail_song_artist"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:padding="5dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>